<div class="card">
    <h4 class="card-header d-flex justify-content-between align-items-center">
        Bài báo
        <div class="d-flex ml-auto">
            <input class="form-control mr-2" type="search" placeholder="Search" aria-label="Search" style="width: 300px;">
            <button class="btn btn-success" type="button">Search</button>
        </div>
    </h4>
    {{#if this.empty}}
    <div class="card-body">
        <p class="card-text">Không có dữ liệu</p>
    </div>
    {{else}}
    <div class="card-body">
        <div class="row">
            {{#each this.products}}
             {{#if (eq Price 0)}}
                <div class="col-sm-6 mb-3">
                    <div class="card h-100">
                        <img src="/static/imgs/sp/{{ProID}}/main.jpg" alt="{{ProName}}" title="{{ProName}}" class="card-img-top">
                        <div class="card-body">
                            {{#each ../articles}}
                                {{#if (eq category_id ../ProID)}}
                                <h4 class="card-title">Tên: {{../ProName}} | {{abstract}}</h4>
                                {{/if}}
                            {{/each}}
                            {{#if (eq CatID 1)}}
                                <h5 class="card-title text-muted">Chuyên mục: Nông sản</h5>
                            {{/if}}
                            {{#if (eq CatID 2)}}
                                <h5 class="card-title text-muted">Chuyên mục: Hải sản</h5>
                            {{/if}}
                            {{!-- <h4 class="card-title text-danger">Chuyên mục: {{CatID}}</h4> --}}
                            <p class="card-text">Nội dung tóm tắt: {{TinyDes}}</p>
                        </div>
                        <div class="card-footer text-muted">
                            <a class="btn btn-sm btn-outline-primary" href="/products/detail?id={{ProID}}" role="button">
                                <i class="bi bi-eye-fill"></i>
                                Nội dung chi tiết
                            </a>
                        </div>
                    </div>
                </div>
             {{/if}}
            {{/each}}
        </div>
        <div class="pagination-container">
            <ul class="pagination">
                {{#each this.page_items}}
                {{#if isActive}}
                    <li class="page-item active">
                        <a class="page-link" href="/products/byCat?id={{../catId}}&page={{value}}">{{value}}</a>
                    </li>
                {{else}}
                    <li class="page-item">
                        <a class="page-link" href="/products/byCat?id={{../catId}}&page={{value}}">{{value}}</a>
                    </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    {{/if}}
    <div class="card-footer text-muted">
    </div>
</div>
<style>
    .pagination-container {
    display: flex;
    justify-content: center;
}

.pagination {
    margin: 0;
    padding: 0;
}
</style>