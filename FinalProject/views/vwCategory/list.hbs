<div class="card">
    <h4 class="card-header d-flex justify-content-between">
       Chuyên mục
       <a href="/admin/categories/add" role="button" class="btn btn-sm btn-outline-primary">Thêm chuyên mục</a>
    </h4>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Chuyên mục</th>
                    <th>&nbsp</th>
                </tr>
            </thead>
            <tbody>
                {{#each this.categories}}
                <tr>
                    <td scope="row">{{CatID}}</td>
                    <td>{{CatName}}</td>
                    <td>
                        <a name="" id="" class="btn btn-primary" href="/admin/categories/edit?id={{CatID}}" role="button">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        The End
    </div>

